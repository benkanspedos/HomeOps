# HomeOps Environment Variables Template
# Copy this file to .env.local and fill in your values

# Application
NODE_ENV=development
PORT=3001

# Database - Supabase
DATABASE_URL=postgresql://user:password@localhost:5432/homeops
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Redis Cache
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info

# VPN Configuration (for Gluetun)
NORDVPN_USERNAME=your-nordvpn-username
NORDVPN_PASSWORD=your-nordvpn-password
NORDVPN_COUNTRY=United States

# TimescaleDB (for metrics)
TIMESCALE_USER=homeops
TIMESCALE_PASSWORD=your-timescale-password
TIMESCALE_DB=homeops_metrics

# Frontend URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External APIs (optional)
OPENAI_API_KEY=sk-...
ALPHA_VANTAGE_API_KEY=your-api-key
FINNHUB_API_KEY=your-api-key
POLYGON_API_KEY=your-api-key

# Monitoring (optional)
SENTRY_DSN=https://...@sentry.io/...
DATADOG_API_KEY=your-api-key

# Feature Flags
ENABLE_VPN_ROUTING=true
ENABLE_TRADING_FEATURES=false
ENABLE_AI_FEATURES=false