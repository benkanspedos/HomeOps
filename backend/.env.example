# HomeOps Backend Environment Variables
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3101
API_URL=http://localhost:3101

# Database Configuration
DATABASE_URL=postgresql://homeops:homeops123@localhost:5433/homeops
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# TimescaleDB Configuration
TIMESCALE_URL=postgresql://homeops:homeops123@localhost:5433/metrics
METRICS_RETENTION_DAYS=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=homeops123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Docker Configuration (Windows uses TCP, Linux uses socket)
# For Windows Docker Desktop:
# DOCKER_HOST=tcp://127.0.0.1:2375
# For Linux/Mac:
# DOCKER_SOCKET=/var/run/docker.sock

# Monitoring Configuration
MONITORING_INTERVAL=30000
HEALTH_CHECK_INTERVAL=60000
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_ALERTS=true
ENABLE_MONITORING_LOGS=true
MONITORING_LOG_LEVEL=info

# Alert Configuration
ALERT_RATE_LIMIT=15
MAX_ALERTS_PER_HOUR=20

# Default Thresholds
DEFAULT_CPU_THRESHOLD=80
DEFAULT_MEMORY_THRESHOLD=90
DEFAULT_DISK_THRESHOLD=85
DEFAULT_RESTART_THRESHOLD=5
DEFAULT_NETWORK_THRESHOLD=1000

# Critical Containers (comma-separated)
CRITICAL_CONTAINERS=homeops-gluetun,homeops-pihole,homeops-redis,homeops-timescaledb

# SMTP Configuration (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@homeops.local
SMTP_PASS=your_app_password_here
SMTP_FROM=HomeOps Alerts <alerts@homeops.local>

# Slack Configuration (for Slack alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Configuration (for Discord alerts)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# VPN Configuration (for Gluetun container)
NORDVPN_USERNAME=your_nordvpn_username
NORDVPN_PASSWORD=your_nordvpn_password
NORDVPN_COUNTRY=United States

# Pi-hole Configuration
PIHOLE_ADMIN_PASSWORD=admin123
PIHOLE_API_TOKEN=your_pihole_api_token

# Portainer Configuration
PORTAINER_ADMIN_USER=admin
PORTAINER_ADMIN_PASSWORD=portainer123

# Security
SESSION_SECRET=your-session-secret-change-this
CORS_ORIGIN=http://localhost:3000,http://localhost:3101

# Logging
LOG_LEVEL=info
LOG_FILE=logs/homeops.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_DNS_MANAGEMENT=true
ENABLE_CONTAINER_MANAGEMENT=true
ENABLE_VPN_MANAGEMENT=true
ENABLE_BACKUP_RESTORE=false

# External APIs (optional)
OPENWEATHER_API_KEY=
NEWS_API_KEY=
CRYPTO_API_KEY=

# Metrics Export (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Development
DEBUG=false
VERBOSE=false